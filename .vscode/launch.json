{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Main",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/dataLinker/dataLinker",
            "args": [ "-c", "cfg/dtc.lnk_cfg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../DTC",
